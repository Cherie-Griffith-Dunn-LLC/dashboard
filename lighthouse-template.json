{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "mspOfferName": {
      "type": "string",
      "defaultValue": "CYPROSECURE 360 Security Management",
      "metadata": {
        "description": "Specify the name of the offer from the Managed Service Provider"
      }
    },
    "mspOfferDescription": {
      "type": "string",
      "defaultValue": "Comprehensive security monitoring and threat management via CYPROSECURE 360 platform",
      "metadata": {
        "description": "Name of the Managed Service Provider offering"
      }
    },
    "managedByTenantId": {
      "type": "string",
      "defaultValue": "ff4945f1-e101-4ac8-a78f-798156ea9cdf",
      "metadata": {
        "description": "Specify the tenant ID of Cyproteck (the MSP)"
      }
    }
  },
  "variables": {
    "mspRegistrationName": "[guid(parameters('managedByTenantId'))]",
    "mspAssignmentName": "[guid(parameters('managedByTenantId'))]",
    "authorizations": [
      {
        "principalId": "02f7f735-fd6e-4302-bc90-17821b0661b3",
        "roleDefinitionId": "fb1c8493-542b-48eb-b624-b4c8fea62acd",
        "principalIdDisplayName": "Cyproteck Security Operations",
        "delegatedRoleDefinitionIds": []
      },
      {
        "principalId": "02f7f735-fd6e-4302-bc90-17821b0661b3",
        "roleDefinitionId": "ab8e14d6-4a74-4a29-9ba8-549422addade",
        "principalIdDisplayName": "Cyproteck Sentinel Operations",
        "delegatedRoleDefinitionIds": []
      },
      {
        "principalId": "02f7f735-fd6e-4302-bc90-17821b0661b3",
        "roleDefinitionId": "39bc4728-0917-49c7-9d2c-d95423bc2eb4",
        "principalIdDisplayName": "Cyproteck Security Monitoring",
        "delegatedRoleDefinitionIds": []
      }
    ]
  },
  "resources": [
    {
      "type": "Microsoft.ManagedServices/registrationDefinitions",
      "apiVersion": "2020-02-01-preview",
      "name": "[variables('mspRegistrationName')]",
      "properties": {
        "registrationDefinitionName": "[parameters('mspOfferName')]",
        "description": "[parameters('mspOfferDescription')]",
        "managedByTenantId": "[parameters('managedByTenantId')]",
        "authorizations": "[variables('authorizations')]"
      }
    },
    {
      "type": "Microsoft.ManagedServices/registrationAssignments",
      "apiVersion": "2020-02-01-preview",
      "name": "[variables('mspAssignmentName')]",
      "dependsOn": [
        "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]"
      ],
      "properties": {
        "registrationDefinitionId": "[resourceId('Microsoft.ManagedServices/registrationDefinitions/', variables('mspRegistrationName'))]"
      }
    }
  ],
  "outputs": {
    "mspOfferName": {
      "type": "string",
      "value": "[parameters('mspOfferName')]"
    },
    "authorizations": {
      "type": "array",
      "value": "[variables('authorizations')]"
    }
  }
}
